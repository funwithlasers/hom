{% extends "layout.jinja2" %}

{% block pagestyles %}
  <link href="{{ url_for('static', filename='dist/css/account.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block content %}
  <div class="form-wrapper">

    {% for message in get_flashed_messages() %}
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        {{ message }}
      </div>
    {% endfor %}

    <h1>Add property</h1>

    <form method="POST" action="/add_property">
      {{ form.csrf_token }}

      <fieldset class="street">
        {{ form.street.label }}
        {{ form.street }}
        {% if form.street.errors %}
          <ul class="errors">
            {% for error in form.street.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <fieldset class="city">
        {{ form.city.label }}
        {{ form.city }}
        {% if form.city.errors %}
          <ul class="errors">
            {% for error in form.city.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <fieldset class="dropdown">
        {{ form.state.label }}
        {{ form.state }}
        {% if form.state.errors %}
          <ul class="errors">
            {% for error in form.state.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <fieldset class="number">
        {{ form.zip.label }}
        {{ form.zip }}
        {% if form.state.errors %}
          <ul class="errors">
            {% for error in form.zip.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <fieldset class="file">
        {{ form.image.label }}
        {{ form.image }}
        {% if form.image.errors %}
          <ul class="errors">
            {% for error in form.image.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <div class="submit-button">
        {{ form.submit }}
      </div>

    </form>

  </div>
{% endblock %}