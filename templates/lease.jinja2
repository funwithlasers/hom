{% extends "layout.jinja2" %}

{% block pagestyles %}
  <link href="{{ url_for('static', filename='dist/css/account.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block content %}
  <div class="form-wrapper">

    {% for message in get_flashed_messages() %}
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        {{ message }}
      </div>
    {% endfor %}

    <h1>Lease Management</h1>

    <form method="POST">
      {{ form.csrf_token }}

      <fieldset class="start_date">
        {{ form.start_date.label }}
        {{ form.start_date }}
        {% if form.start_date.errors %}
          <ul class="errors">
            {% for error in form.start_date.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <fieldset class="end_date">
        {{ form.end_date.label }}
        {{ form.end_date }}
        {% if form.end_date.errors %}
          <ul class="errors">
            {% for error in form.end_date.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <fieldset class="rate">
        {{ form.rate.label }}
        {{ form.rate }}
        {% if form.rate.errors %}
          <ul class="errors">
            {% for error in form.rate.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <fieldset class="terms">
        {{ form.terms.label }}
        {{ form.terms }}
        {% if form.terms.errors %}
          <ul class="errors">
            {% for error in form.terms.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <fieldset class="dropdown">
        {{ form.renter.label }}
        {{ form.renter }}
        {% if form.renter.errors %}
          <ul class="errors">
            {% for error in form.renter.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>


      <div class="submit-button">
        {{ form.submit }}
      </div>

    </form>

  </div>
{% endblock %}